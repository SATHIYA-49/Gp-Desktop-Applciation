{
  "name": "golden-power",
  "version": "0.2.4",
  "main": "main.js",
  "homepage": "./",
  "description": "Golden Power",
  "author": "Golden Power",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SATHIYA-49/Gp-Desktop-Applciation.git"
  },
  "dependencies": {
    "@lottiefiles/dotlottie-react": "^0.17.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.13.2",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "lottie-react": "^2.4.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.11.0",
    "react-scripts": "5.0.1",
    "recharts": "^3.6.0",
    "sweetalert2": "^11.26.17",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "wait-on": "^9.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "wait-on http://localhost:3000 && electron .",
    "dev": "concurrently \"npm start\" \"npm run electron\"",
    "dist": "npm run build && electron-builder --win -p always",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "build": {
    "extends": null,
    "appId": "com.goldenpower.erp",
    "productName": "GoldenPower",
    "asar": true,
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "SATHIYA-49",
        "repo": "Gp-Desktop-Applciation"
      }
    ],
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
